@model ProjectReports.Models.Shifts

@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css">
<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Shifts</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.FristWorker, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.FristWorker, (SelectList)ViewBag.Workers, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FristWorker, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SecondWorker, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SecondWorker, (SelectList)ViewBag.Workers, "Brak drugiego pracownika", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecondWorker, "", new { @class = "text-danger" })
        </div>
    </div>


    @{
        List<SelectListItem> listItems = new List<SelectListItem>();
        listItems.Add(new SelectListItem
        {
            Text = "6:00-18:00",
            Value = "6:00-18:00"
        });
        listItems.Add(new SelectListItem
        {
            Text = "18:00-6:00",
            Value = "18:00-6:00"
        });
        listItems.Add(new SelectListItem
        {
            Text = "6:00-14:00",
            Value = "6:00-14:00"
        });
        listItems.Add(new SelectListItem
        {
            Text = "14:00-22:00",
            Value = "14:00-22:00"
        });
        listItems.Add(new SelectListItem
        {
            Text = "22:00-6:00",
            Value = "22:00-6:00"
        });
    }


    <div class="form-group">
        @Html.LabelFor(model => model.TimeRange, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TimeRange, listItems)
            @Html.ValidationMessageFor(model => model.TimeRange, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { Text = " date-picker" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">

    $(function () {
        $('.date-picker').datepicker({
            dateFormat: 'dd-mm-yy'
        });
    });
</script>